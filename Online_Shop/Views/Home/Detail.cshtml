@model Item
@{
    ViewData["Title"] = Model.product.name;
}

<div class="contact-container" style="max-width: 700px; margin: 60px auto;">
    <h1 class="contact-title" style="direction: rtl; text-align: right;">@Model.product.name</h1>

    <div style="display: flex; flex-wrap: wrap; gap: 30px; justify-content: center; align-items: center;">
        <img src="~/images/1.jpg" alt="@Model.product.name" style="max-width: 320px; border-radius: 12px; box-shadow: 0 6px 15px rgba(58, 134, 255, 0.2);" />

        <div style="max-width: 320px; text-align: right; direction: rtl;">
            <p style="font-size: 1rem; font-weight: 600; color: var(--dark-blue); margin-bottom: 10px;">
                دسته‌بندی: <a asp-controller="Home" asp-action="CategoryDetail" asp-route-id="@Model.product.category.id"><span style="color: var(--light-blue);">@Model.product.category.name</span></a>
            </p>

            <p style="font-size: 1rem; font-weight: 600; color: var(--dark-blue); margin-bottom: 20px;">
                موجودی: <span style="color: var(--light-blue);">@Model.count</span> عدد
            </p>

            <p style="font-size: 1.5rem; font-weight: 700; color: var(--primary-blue); margin-bottom: 15px;">
                قیمت: @String.Format("{0:N0} تومان", Model.price)
            </p>

            <p style="font-size: 1.1rem; color: var(--text-dark); line-height: 1.5;">
                @Model.product.description
            </p>

            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                <input type="hidden" name="productId" value="@Model.product.id" />
                <button type="submit" class="btn-buy" style="max-width: 220px; font-size: 1.2rem;">
                    افزودن به سبد خرید
                </button>
            </form>
        </div>
    </div>
</div>
