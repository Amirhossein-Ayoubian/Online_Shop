@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت‌نام";
}

<div class="auth-page">
    <div class="auth-card">
        <h2 class="auth-title">ایجاد حساب کاربری</h2>

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="username"></label>
                <input asp-for="username" class="form-control form-control-lg" />
                <span asp-validation-for="username" class="text-danger validation-text"></span>
            </div>

            <div class="form-group position-relative">
                <label asp-for="password"></label>
                <input asp-for="password" type="password" class="form-control form-control-lg password-input" />
                <span asp-validation-for="password" class="text-danger validation-text"></span>
            </div>

            <div class="form-group position-relative">
                <label asp-for="confirmPassword"></label>
                <input asp-for="confirmPassword" type="password" class="form-control form-control-lg password-input" />
                <span asp-validation-for="confirmPassword" class="text-danger validation-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="email"></label>
                <input asp-for="email" class="form-control form-control-lg" />
                <span asp-validation-for="email" class="text-danger validation-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="fullName"></label>
                <input asp-for="fullName" class="form-control form-control-lg" />
                <span asp-validation-for="fullName" class="text-danger validation-text"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-buy" style="max-width: 260px;">ثبت‌نام</button>
            </div>

            <div class="mt-3 text-center">
                <small>قبلاً ثبت‌نام کرده‌اید؟ <a asp-controller="Login" asp-action="Index">وارد شوید</a></small>
            </div>
        </form>
    </div>
</div>

